DB_PORT=5432

# CONFIGURACIÓN DEL SERVIDOR
FLASK_ENV=production
FLASK_DEBUG=False
SERVER_HOST=0.0.0.0
SERVER_PORT=5001

# CONFIGURACIÓN JWT
JWT_SECRET_KEY=NIEA_EJB_PRODUCTION_SECRET_KEY_2025_MIA_INTELLIGENCE
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CONFIGURACIÓN DE SEGURIDAD
BCRYPT_LOG_ROUNDS=12
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CONFIGURACIÓN DE LOGGING
LOG_LEVEL=INFO
LOG_FILE=/var/log/niea-ejb/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# CONFIGURACIÓN DE CORS
CORS_ORIGINS=https://niea.ejercito.mil.ve,https://api.niea.ejercito.mil.ve
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# CONFIGURACIÓN DE RATE LIMITING
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_LOGIN=10 per minute

# CONFIGURACIÓN DE CACHE
CACHE_TYPE=redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# CONFIGURACIÓN DE MONITOREO
MONITORING_ENABLED=True
HEALTH_CHECK_INTERVAL=60
METRICS_ENDPOINT=/metrics

# CONFIGURACIÓN DE BACKUP
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/niea-ejb

# CONFIGURACIÓN DE EMAIL (NOTIFICACIONES)
SMTP_HOST=smtp.ejercito.mil.ve
SMTP_PORT=587
SMTP_USER=niea-system@ejercito.mil.ve
SMTP_PASSWORD=
SMTP_USE_TLS=True
ADMIN_EMAIL=admin@ejercito.mil.ve

# CONFIGURACIÓN DE SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/niea-ejb.crt
SSL_KEY_PATH=/etc/ssl/private/niea-ejb.key
SSL_ENABLED=True

# CONFIGURACIÓN DE WORKERS
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=sync
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=2

# CONFIGURACIÓN DE PROXY REVERSO
PROXY_FIX_ENABLED=True
PROXY_FIX_X_FOR=1
PROXY_FIX_X_PROTO=1
PROXY_FIX_X_HOST=1
PROXY_FIX_X_PREFIX=1
